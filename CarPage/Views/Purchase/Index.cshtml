@model CarPage.Models.Car

<div style="display: flex; justify-content: center; align-items: center; height: 80vh;">
    <div style="display: flex; border: 1px solid #ccc; padding: 30px; border-radius: 10px; width: 900px; font-size: 1.2em;">
        <div style="flex: 1; margin-right: 20px;">
            <div style="text-align: center; margin-top: 20px;">
                <img src="@Model.ImageUrl" alt="@Model.Make @Model.Model" style="width: 300px; height: 250px; max-width: 300px; margin-bottom: 20px;" />
                <h3>@Model.Make @Model.Model (@Model.Year)</h3>
                <p><strong>Price:</strong> $@Model.Price</p>
            </div>
        </div>
        <div style="flex: 1;">
            <h2>Contact Information</h2>
             <form method="post" action="/Purchase/Message">
            <div style="margin-bottom: 15px;">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" style="width: 100%; padding: 10px;" />
            </div>
            <div style="margin-bottom: 15px;">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" style="width: 100%; padding: 10px;" />
            </div>
            <div style="margin-bottom: 15px;">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" style="width: 100%; padding: 10px;" />
            </div>
            <div style="margin-bottom: 15px;">
                <label for="phone">Phone:</label>
                <input type="tel" id="phone" name="phone" style="width: 100%; padding: 10px;" />
            </div>
            <div style="text-align: center; margin-top: 20px;">
                <button type="submit" style="padding: 15px 30px; background-color: #007bff; color: white; border: none; cursor: pointer; font-size: 1em;">Submit</button>
            </div>
        </form>
        </div>
    </div>
</div>